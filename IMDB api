using System;
using System.Text;
using System.Net;
using Newtonsoft.Json;
using Newtonsoft.Json.Linq;

namespace IMDB
{
    class Program
    {
        static void Main(string[] args)
        {

            var json = new WebClient().DownloadString("http://www.imdb.com/xml/find?json=1&nr=1&tt=on&q=" 
                + Console.ReadLine());
            JObject jsonObject = JObject.Parse(json);
            
            Console.WriteLine("Title: " + jsonObject["title_popular"][0]["title"]);
            Console.WriteLine("Year: " + (jsonObject["title_popular"][0]["description"]).ToString().Substring(0,4));

            Console.ReadLine();
        }
    }
}
